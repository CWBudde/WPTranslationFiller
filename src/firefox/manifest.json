{
  "manifest_version": 2,
  "name": "WordPress Translation Filler",
  "version": "1.5.12",
  "description": "Firefox addon to automatically fill translations from Google Cloud Translation API and indicate the accuracy of translation according to locale glossary.",
  "web_accessible_resources": [
    "//cute-alert.css",
    "/img/*",
    "error-alert.flac",
    "clipboard-icon.png"
  ],
  "background": {
    "scripts": [
      "jsstore.js",
      "jsstore.worker.js"
    ]
  },
  "options_ui": {
    "page": "wptf-options.html",
    "browser_style": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://api.deepl.com/*",
    "https://translation.googleapis.com/*",
    "https://translate.wordpress.org/*",
    "https://api.languagetoolplus.com/*",
    "https://api.cognitive.microsofttranslator.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://translate.wordpress.org/*",
        "https://cdnjs.cloudflare.com/*"
      ],
      "js": [
        "wptf-functions.js",
        "purify.min.js",
        "cute-alert.js",
        "wptf-consistency.js",
        "jsstore.js",
        "jsstore.worker.js",
        "wptf-commonTranslate.js",
        "deeplTranslate.js",
        "googleTranslate.js",
        "microsoftTranslate.js",
        "jsdiff.js",
        "wptf-database.js",
        "contentScript.js"
      ],
      "css": [
        "cute-alert.css",
        "translationFillerStyle.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{1f70acc7-00c6-4bdf-96a1-c97a19a6884a}",
      "strict_min_version": "57.0"
    }
  }
}